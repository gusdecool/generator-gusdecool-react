{
  "extends": "stylelint-config-standard",
  "plugins": [
    "stylelint-scss"
  ],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "each",
          "function",
          "if",
          "include",
          "mixin",
          "return"
        ]
      }
    ],
    "color-hex-length": "long",
    "no-descending-specificity": null,
    "selector-pseudo-class-no-unknown": [
      true,
      {
        "ignorePseudoClasses": [
          "global"
        ]
      }
    ],
    "scss/dollar-variable-pattern": null,
    "scss/selector-no-redundant-nesting-selector": true
  }
}
